<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:backgroundTint="#A122FCF5"
tools:context=".MainActivity">

<TextView
    android:id="@+id/tv_jobcategory"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="#002C4E88"
    android:backgroundTintMode="screen"
    android:text="Job Category"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:textColor="#04379C"
    android:textColorHint="#00BCD4"
    android:textColorLink="#03A9F4"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/et_jobtitle_descact"
    android:layout_width="225dp"
    android:layout_height="47dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:ems="10"
    android:gravity="center"
    android:hint="Job Title"
    android:inputType="textPersonName"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_jobcategory" />

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_jobtitle_descact">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Deadline :"
        android:textColor="#021520"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_date_descact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="DD/MM/YY"
        android:inputType="date"
        android:textColorHint="#00BCD4"
        android:textColorLink="#00BCD4"/>



    <EditText
        android:id="@+id/et_time_descact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="HH:MM"
        android:inputType="time"
        android:textColorHint="#00BCD4" />

</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayout3"
    android:layout_width="367dp"
    android:layout_height="345dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="36dp"
    android:layout_marginEnd="24dp"
    android:background="#D8ECF7F5"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.484"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Description"
        android:textColor="#FD050505"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_description_desact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter your job description here. "
        android:inputType="textMultiLine" />
</LinearLayout>

<LinearLayout
    android:layout_width="402dp"
    android:layout_height="51dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="36dp"
    android:background="#00ECE5E5"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Price :"
        android:textColor="#0C0C0C"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_price_descact"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btn_confirmationjob_speact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#4BBFF3"
        android:foregroundTint="#00C25353"
        android:text="Confirm"
        android:textColor="#111010" />
</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>